# Database (optional for dev mode)
DATABASE_URL=mysql://user:password@localhost:3306/manus

# JWT (optional for dev mode)
JWT_SECRET=your-secret-key-change-in-production

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, minimax, ollama
LLM_MODEL=gpt-4o     # Optional, uses provider default if not set
LLM_API_KEY=sk-xxx   # Required for most providers
LLM_API_URL=         # Optional, override base URL

# Provider-specific API keys (optional, falls back to LLM_API_KEY)
OPENAI_API_KEY=sk-xxx
OPENAI_API_URL=https://api.openai.com

ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_API_URL=https://api.anthropic.com

MINIMAX_API_KEY=xxx
MINIMAX_API_URL=https://api.minimax.chat
MINIMAX_GROUP_ID=xxx  # Optional for MiniMax

# Ollama (local LLM)
OLLAMA_HOST=http://localhost:11434

# Python Orchestrator Service
ORCHESTRATOR_URL=http://localhost:8001

# OAuth (optional, for production with authentication)
OAUTH_SERVER_URL=
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# Coolify Deployment (optional)
COOLIFY_API_URL=
COOLIFY_API_TOKEN=

# Legacy/Backward Compatibility
BUILT_IN_FORGE_API_KEY=  # Deprecated, use LLM_API_KEY
BUILT_IN_FORGE_API_URL=  # Deprecated, use LLM_API_URL
